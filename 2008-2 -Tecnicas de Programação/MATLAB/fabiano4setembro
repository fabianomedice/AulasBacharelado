%Sistema 4 - primeiro metodo
%x+y+z=3
%4x+2y+5z=7
%2x-8y+3z=5
mc=[1 1 1;4 2 5; 2 -8 3]

mc =

     1     1     1
     4     2     5
     2    -8     3

mi = [3;7;5];
ms=inv(mc)*mi

ms =

    9.5000
   -0.5000
   -6.0000

%portanto te-se x=9.5 y=-0.5 z=-6
%Sistema 4 - segundo metodo
%usando determinantes
mx = [mi mc(1:3, [2 3])];
my = [mc(1:3, 1) mc(1:3, 3)];
my = [mc(1:3, [1 2]) mi];
x=det(mx)/det(mc)

x =

    9.5000

y=det(my)/det(mc)

y =

    -6

z=det(mz)/det(mc)
??? Undefined function or variable 'mz'.

my = [mc(1:3, 1) mc(1:3, 3)];
mz = [mc(1:3, [1 2]) mi];
z=det(mz)/det(mc)

z =

    -6

my = [mc(1:3, 1) mc(1:3, 3)];
y=det(my)/det(mc)
??? Error using ==> det
Matrix must be square.

%Sistema 4 - segundo metodo
%usando determinantes
mx = [mi mc(1:3, [2 3])];
my = [mc(1:3, 1) mc(1:3, 3)];
mz = [mc(1:3, [1 2]) mi];
x=det(mx)/det(mc)

x =

    9.5000

y=det(my)/det(mc)
??? Error using ==> det
Matrix must be square.

my = [mc(1:3, 1) mi mc(1:3, 3)];
y=det(my)/det(mc)

y =

   -0.5000

z=det(mz)/det(mc)

z =

    -6

%Sistema 5 - segundo metodo
%5x + 15y - 10z + 40w = -45
%         -  3z +  9w = 6
%4x + 12y -  2z + 14w = -24
% x +  3y -   z +  5w = -7
mc = [5 15 -10 40; 0 0 3 -9; 4 12 -2 14; 1 3 -1 5];
mi = [-45;6;-24;-7];
detmc = det(mc)

detmc =

     0

%detmc = 0 significa que o sistema e' impossivel ou indeterminado. vejamos os detx, dety, detz e detw
mx = [mi mc(1:4, 2:4)];
detmx=det(mx)

detmx =

     0

my= [mc(1:4,1:2)
my= [mc(1:4,1) mi mc(1:4,3:4)];
??? my= [mc(1:4,1) mi mc(1:4,3:4)];
      |
Error: MATLAB assignment cannot be nested.

my = [mc(1:4,1) mi mc(1:4,3:4)];
mz = [mc(1:4,1:2) mi mc(1:4,4)];
dety=det(my)

dety =

     0

detz=det(mz)

detz =

     0

mw = [mc(1:4,1:3) mi];
detw = det(mw)

detw =

     0

%como tambem sao nulos os determinantes de x, y, z e w, o sitema e' indeterminado (tem infinitas soluçoes)
%Sistema 5 - primeiro metodo
